  "repository": "none",
  "author": "Tarun Soni <soni.tarun26@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "nodemon backend/server --ignore client",
    "client": "npm run start --prefix frontend",
    "dev": "concurrently \"npm run server \" \"npm run client",
