    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "YARN_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "prettier": "2.2.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3"
  },
  "engines": {
    "node": "14"
  }
}
